#
# \file Dockerfile.dev
# \brief Development Dockerfile for ASP.NET Core backend application
#
# This Dockerfile sets up a development environment with:
# - Full .NET SDK
# - Source code mounted via volume
# - Exposes port 8080 for API access
#
# \date 13-09-2025
#

ARG DOTNET_VERSION=8.0

FROM mcr.microsoft.com/dotnet/sdk:$DOTNET_VERSION AS dev

RUN addgroup -S app && adduser -S -G app app

WORKDIR /src

COPY apps/backend/Transacto.sln ./
COPY apps/backend/Transacto.API/Transacto.API.csproj ./Transacto.API/
COPY apps/backend/Transacto.Application/Transacto.Application.csproj ./Transacto.Application/
COPY apps/backend/Transacto.Domain/Transacto.Domain.csproj ./Transacto.Domain/
COPY apps/backend/Transacto.Infrastructure/Transacto.Infrastructure.csproj ./Transacto.Infrastructure/

RUN dotnet restore

COPY apps/backend/ ./

RUN chown -R app:app /app

USER app

EXPOSE 8080

CMD ["dotnet", "watch", "--project", "Transacto.API", "run", "--urls", "http://0.0.0.0:8080"]
